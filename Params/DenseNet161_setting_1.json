        "verbose" : true,
        "loss_function": "CrossEntropyLoss",
        "num_epochs": 40,
        "optimizer": "Adam",
        "optimizer_args": {
            "betas": [
                0.9,
                0.999
            ],
            "eps": 1e-08,
            "lr": 1e-3,
            "weight_decay": 5e-3
        },
        "scheduler": "ReduceLROnPlateau",
        "scheduler_args": {
            "mode" : "min",
            "factor" : 0.75,
            "patience" : 5,
            "verbose": true
        },
        "requires_metric" : true
    }
