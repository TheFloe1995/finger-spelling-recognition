{
    "data_params": {
        "augmentation_params": {
            "brightness_rand": 0.5,
            "contrast_rand": 0.25,
            "crop_factor": [
                1.0,
                1.0
            ],
            "distortion_range": [
                1.0,
                1.0
            ],
            "expand_after_rot": false,
            "hue_rand": 0.08,
            "im_size": 224,
            "rot_angle": 20,
            "saturation_rand": 0.6
        },
        "batch_size": 120,
        "samples_per_epoch": 1800,
        "small_val_set_size": 240,
        "data_root_dir": "/Datasets/dataset5",
        "num_workers" : 2,
        "split_config": {
            "test_subsets": [
                "AA_TEST",
		        "E2"
            ],
            "train_subsets": [
                "A",
                "B",
                "C",
                "D"
            ],
            "val_subsets": [
                "AA_VAL",
		        "E1"
            ]
        }
    },
    "model_params": {
        "freeze_point": 2,
        "num_classes": 24
    },
    "solver_params": {
        "layer_names": [
            "trainyou_wewill",
            "classifier"
        ],
        "log_frequency": 3,
